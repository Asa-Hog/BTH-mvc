{% extends 'base.html.twig' %}

{% block title %}Update book{% endblock %}

{% block content %} 

<h1>Update book</h1>


<form action:"{{ path('book_update_process', {'id':book.getId()} ) }}" method="post">
    <fieldset>
    <legend>Book details</legend>
    <p>
        <label>Title:
            <input type="text" name="title" value="{{ book.getTitle() }}">
        </label>
    </p>
    <p>
        <label>ISBN:
            <input type="number" name="isbn" value="{{ book.getIsbn() }}" required>
        </label>
    </p>
    <p>
        <label>Author:
            <input type="text" name="author" value="{{ book.getAuthor() }}">
        </label>
    </p>
    <p>
        <label>Image link:
            <input type="text" name="image" value="{{ book.getImage() }}">
        </label>
    </p>
    <p>
        <input class = "button" type="submit" value="Update">
    </p>
    </fieldset>
</form>

{% endblock %}
