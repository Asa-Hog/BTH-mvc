{% extends "base.html.twig" %}

{% block title %} Draw {% endblock %}


{% block content %} 




<div class = "deck">

    {% if card_data[1] == 0 %}
    <p>There are no cards left in the deck.</p>


    {% else %}

    <p>Drawn card:</p>
    <div class= "card">
        <div class = "{{ card_data[0].get_details[1] }}">
            {{ card_data[0].get_details[1] }}
        </div>
        <div>
            {{ card_data[0].get_details[0] }}
        </div>
    </div>

    <p>Cards left in deck:</p>
    <p>{{ card_data[1] }}</p>

    {% endif %}

</div>


{% endblock %}