{% extends 'base.html.twig' %}

{% block title %}Show all books{% endblock %}

{% block content %} 

<h1>Show all books</h1>

<a class="button" href = "{{ path("book_create") }}">Create book</a></br>

<table>
    <th>Title</th><th>ISBN</th><th>Author</th><th>Image</th><th>Update</th><th>Delete</th>
    {% for book in books %}
        <tr>
            <td><a href = "{{ path("book_by_id", {'id':book.getId()} ) }}">{{ book.getTitle() }}</a></td>
            <td>{{ book.getIsbn() }}</td>
            <td>{{ book.getAuthor() }}</td>
            <td>{{ book.getImage() }}</td>
            <td><a href = "{{ path("book_update", {'id':book.getId()} ) }}"> Update</a></td>
            <td><a href = "{{ path("book_delete_by_id", {'id':book.getId()} ) }}"> Delete</a></td>
        </tr>
        {% endfor %}
    </table>

{% endblock %}
